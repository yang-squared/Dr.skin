<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1966cc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9e9f3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/frag2header" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="167dp"
                android:layout_height="170dp"
                android:background="@drawable/first2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "/>

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="167dp"
                android:layout_height="170dp"
                android:background="@drawable/second" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:text="    "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="167dp"
                android:layout_height="170dp"
                android:background="@drawable/ff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "/>

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="167dp"
                android:layout_height="170dp"
                android:background="@drawable/third" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/ill_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#000000"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="질병 검색하기" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="140dp" />
    </LinearLayout>
</LinearLayout>